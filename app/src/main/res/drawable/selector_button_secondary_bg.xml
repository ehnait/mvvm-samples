<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorButtonInvalid" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!--最后一个item不设置state_pressed时表示所有其他状态(只有在最后才能不写state_pressed不然之后的item会被忽略)-->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorAccent" android:startColor="@color/colorAccentTransparent" android:type="linear" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>